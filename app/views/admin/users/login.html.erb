<p style><%= @error %>
  <%= form_tag action: :authenticate do %>

    <div class="field">
      <%= label_tag :email, 'メールアドレス' %><br>
      <%= email_field_tag :email, '', size: 20 %><br>
    </div>
    <div>
      <%= label_tag :pass, 'パスワード' %><br>
      <%= password_field_tag :pass, '', size: 20 %><br>
    </div>

    <%= hidden_field_tag :referer, flash[:referer] %>
    <%= submit_tag 'ログイン' %>

    <div>
      <%= link_to 'ユーザを新規作成する', new_user_path %>
    </div>
<% end %>
