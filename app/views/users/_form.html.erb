<%= form_for(@user, html: { id: "btn-blue", class: "btn_sample sample" }) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.label :email %><%= f.email_field :email, size: 25, maxlenght: 50 %><br>
    <%= f.label :phoneNumber %><%= f.telephone_field :phoneNumber, disabled: false %><br>
    <%= f.label :firstName %><%= f.text_field :firstName %><br>
    <%= f.label :lastName %><%= f.text_field :lastName %><br>

    <!--passwordはデフォルトが表示されないデメリットあり-->
    <%= f.label :pass %><%= f.password_field :pass, size: 10, maxlength: 15, disabled: false %><br>
    <%= f.label :pass_confirmation %><%= f.password_field :pass_confirmation, size: 10, maxlength: 15, disabled: false %><br>
    <%= f.label :role %><%= f.text_field :role %><br>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
